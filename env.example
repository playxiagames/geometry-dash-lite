# Site Configuration Template
# Copy this file to .env.local and customize for your game site

# Basic Site Information
NEXT_PUBLIC_SITE_NAME="Your Game Site"
NEXT_PUBLIC_SITE_SHORT_NAME="Game Site"
NEXT_PUBLIC_SITE_DESCRIPTION="Play games online for free! Collection of fun and entertaining games you can play directly in your browser."
NEXT_PUBLIC_SITE_URL="https://your-domain.com"

# Main Game Configuration
NEXT_PUBLIC_MAIN_GAME_ID="your-main-game-id"

# Brand Colors (Tailwind color names or hex codes)
NEXT_PUBLIC_PRIMARY_COLOR="blue"
NEXT_PUBLIC_ACCENT_COLOR="purple"

# SEO Configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_OG_IMAGE="/images/og-image.jpg"

# External Image Domains (comma-separated)
NEXT_PUBLIC_IMAGE_DOMAINS="your-cdn.com,example.com"

# Game Sources (comma-separated)
NEXT_PUBLIC_GAME_SOURCES="iframe,scratch,external"

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL="contact@your-domain.com"

# Social Links (optional)
NEXT_PUBLIC_TWITTER_URL=""
NEXT_PUBLIC_FACEBOOK_URL=""
NEXT_PUBLIC_GITHUB_URL=""

# Feature Flags
NEXT_PUBLIC_ENABLE_FAVORITES="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_THEME_TOGGLE="true" 