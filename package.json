{
  "name": "snake-game-site",
  "version": "1.0.0",
  "description": "Universal game website template with Snake Game",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "deploy": "npm run build && npm run export",
    "lint": "next lint",
    "deploy:github": "bash ./scripts/deploy-github.sh",
    "deploy:vercel": "bash ./scripts/deploy.sh",
    "build:analyze": "ANALYZE=true npm run build",
    "test:build": "npm run build && echo '✅ 构建测试通过'",
    "clean": "rm -rf .next out node_modules/.cache",
    "prepare": "chmod +x scripts/*.sh"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "eslint-config-next": "14.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "keywords": ["snake game", "online games", "arcade games", "free games"],
  "author": "Snake Game Site",
  "license": "MIT"
} 